@model List<WebApplication1.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.Id</td>
                    <td>@emp.Name</td>
                    <td>@emp.Phone</td>
                    <td>@emp.Address</td>
                    <td>@emp.Email</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@emp.Id">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@emp.Id"
                           onclick="return confirm('Are you sure you want to delete this employee?');">Delete</a>
                    </td>

                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No employees found.</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a class="btn btn-success" asp-action="Create">Add New Employee</a>
</div>
